						android:textAppearance="@style/TextAppearance.AppCompat.Medium"
						android:text="date"
						android:layout_marginLeft="20dp"
						android:textSize="15sp"
						android:textColor="@color/colorblack"
						android:layout_height="wrap_content"/>

